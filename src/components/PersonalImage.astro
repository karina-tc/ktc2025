---
import { Image } from "astro:assets";
import personal from "../assets/brand/personal.png";
import heartCursor from "../assets/cursors/heart-emoji.svg";
---

<figure
  class="personal-image flex flex-col justify-center items-center cursor-pointer p-4 border border-white/85 rounded-sm overflow-hidden -rotate-2 bg-white shadow-xl relative"
  data-intersection-observer={true}
>
  <div
    class="emoji-container absolute top-1/2 left-1/3 flex gap-2 pointer-events-none z-[1] w-full h-full"
  >
    <span
      class="left-1/2 opacity-0 font-[24px] transition-all duration-600 transform-translate-y-[20px]"
      style="--offset-x: -20%">ü•∞</span
    >
    <span
      class="left-1/2 opacity-0 font-[24px] transition-all duration-600 transform-translate-y-[20px]"
      style="--offset-x: 10%">üòç</span
    >
    <span
      class="left-1/2 opacity-0 font-[24px] transition-all duration-600 transform-translate-y-[20px]"
      style="--offset-x: -5%">ü•∞</span
    >
    <span
      class="left-1/2 opacity-0 font-[24px] transition-all duration-600 transform-translate-y-[20px]"
      style="--offset-x: 25%">üòç</span
    >
    <span
      class="left-1/2 opacity-0 font-[24px] transition-all duration-600 transform-translate-y-[20px]"
      style="--offset-x: -15%">ü•∞</span
    >
  </div>
  <Image
    src={personal}
    alt="Picture of my family"
    draggable={false}
    loading="lazy"
  />
  <figcaption
    class="flex items-center gap-2 pt-2 w-full opacity-75 font-mono font-semibold uppercase text-xs text-ink"
  >
    <span>My beautiful kid and pup</span>
    <div class="custom-cursor-hint">
      <Image
        src={heartCursor}
        width={32}
        height={32}
        alt="Heart Emoji"
        draggable={false}
      />
    </div>
  </figcaption>
</figure>

<script>
  document.querySelectorAll(".personal-image").forEach((image) => {
    const activateEmojis = () => {
      image.classList.remove("clicked");
      void (image as HTMLElement).offsetWidth;
      image.classList.add("clicked");
      setTimeout(() => {
        image.classList.remove("clicked");
      }, 2000);
    };
    image.addEventListener("click", activateEmojis);
  });
</script>

<style lang="scss">
  .personal-image {
    &.clicked {
      img {
        transform: scale(1.01);
      }

      .emoji-container span {
        opacity: 1;
        transform: translateY(-20px);

        @for $i from 1 through 5 {
          &:nth-child(#{$i}) {
            transition-delay: $i * 0.1s;
            animation: fadeUpAndOut 2s ease-out forwards;
            animation-delay: $i * 0.1s;
          }
        }
      }
    }

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      object-position: center;
      border-radius: 4px;
      transition: transform 0.1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .custom-cursor-hint {
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 40px;
      margin-top: -2px;
      transform: rotate(-2deg);
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);

      img {
        width: 24px;
        height: 24px;
      }

      &:hover img {
        animation: pulse 1s infinite;
      }
    }
  }

  @keyframes fadeUpAndOut {
    0% {
      opacity: 0;
      transform: translateY(20px) translateX(var(--offset-x, 0));
    }
    20% {
      opacity: 1;
      transform: translateY(-20px) translateX(var(--offset-x, 0));
    }
    100% {
      opacity: 0;
      transform: translateY(-40px) translateX(var(--offset-x, 0));
    }
  }

  @keyframes pulse {
    0%,
    100% {
      width: 32px;
      height: 32px;
    }
    50% {
      width: 40px;
      height: 40px;
    }
  }
</style>

---
interface Props {
  client?: string;
  titleMain: string;
  titleSecondary: string;
  description: string;
  href: string;
}

const { client, titleMain, titleSecondary, description, href } = Astro.props;
---

<div
  class="w-full md:w-lg h-auto mx-auto flex flex-col justify-center gap-5 p-5 md:p-8 my-[20%] rounded-lg backdrop-blur-md bg-[rgba(237,229,220,0.25)] z-10 transition-all duration-300 ease-[cubic-bezier(0.165,0.84,0.44,1)] md:hover:bg-[rgba(237,229,220,0.65)] md:hover:shadow-lg md:max-w-full">
  {client && (
    <span
      class="text-ink-tertiary uppercase font-mono tracking-[0.05em] text-sm font-bold">
      {client}
    </span>
  )}
  <h2 class="flex flex-col gap-2 mb-0 pointer-events-none">
    <span class="balance text-ink-secondary">{titleMain}</span>
    <span class="text-ink-tertiary italic balance">{titleSecondary}</span>
  </h2>
  <p class="text-ink-secondary text-sm font-normal balance mb-0">
    {description}
  </p>
  <a
    href={href}
    class="inline-block w-fit px-6 py-4 bg-chocolate text-paper text-xs font-bold font-mono tracking-[0.05em] uppercase leading-none no-underline rounded-md transition-colors duration-300 hover:bg-accent-light active:bg-accent focus:bg-accent">
    View Case Study
  </a>
</div>


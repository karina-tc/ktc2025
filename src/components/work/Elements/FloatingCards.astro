---
interface Card {
  type: string;
  title: string;
  description: string;
}

interface Props {
  leftCard: Card;
  rightCard: Card;
}

const { leftCard, rightCard } = Astro.props;
---

<div class="flex justify-between gap-8 py-16 cursor-pointer md:flex-row flex-col md:gap-8 gap-4 hover:[&>div]:rotate-0 hover:[&>div]:shadow-lg hover:[&>div]:z-[3] hover:[&>div]:delay-300">
  <div class="flex-1 bg-white p-4 rounded-lg shadow-md border-l-4 border-l-accent transition-all duration-300 relative z-[1] md:-rotate-10">
    <h5 class="text-coffee font-sans text-sm mb-1">{leftCard.type}</h5>
    <p class="block font-headings text-[2.5rem] leading-tight">{leftCard.title}</p>
    <p class="mt-1 text-sm">{leftCard.description}</p>
  </div>
  <div class="flex-1 bg-white p-4 rounded-lg shadow-md border-l-4 border-l-accent transition-all duration-300 relative z-[1] md:rotate-10">
    <h5 class="text-coffee font-sans text-sm mb-1">{rightCard.type}</h5>
    <p class="block font-headings text-[2.5rem] leading-tight">{rightCard.title}</p>
    <p class="mt-1 text-sm">{rightCard.description}</p>
  </div>
</div>
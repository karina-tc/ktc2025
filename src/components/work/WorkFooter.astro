---
import WorkFooterButtons from "./WorkFooterButtons.astro";
import FeedbackDialog from "./FeedbackDialog.astro";

export interface Props {
  endingText?: string;
}

const { endingText = "El fin." } = Astro.props;
---

<div class="work-footer">
  <div class="work-footer-text">
    <span>{endingText}</span>
  </div>
  <WorkFooterButtons />
</div>

<FeedbackDialog />

<style lang="scss">
  @import "../../styles/base/_breakpoints.scss";

  .work-footer {
    width: 90%;
    max-width: var(--content-narrow);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-base);

    .work-footer-text {
      color: var(--color-ink-tertiary);
      font-size: clamp(1.25rem, 4vw, 1.75rem);
      font-family: var(--font-headings);
    }

    @include tablet {
      flex-direction: column;
      align-items: flex-start;
      padding: var(--spacing-base) 0;
      gap: var(--spacing-base);
    }
  }
</style>

---
import { Image } from "astro:assets";

interface Panel {
  title: string;
  image: ImageMetadata;
  imageWidth: number;
}

interface Props {
  panels: Panel[];
}

const { panels } = Astro.props;
---

<section class="w-full my-16 py-8 px-10 md:py-16 px-4 md:px-8 bg-surface" data-intersection-observer={true}>
  <div class="neue-container !px-0 mx-auto">
    <div class="flex flex-col md:flex-row gap-20 md:gap-4">
      {panels.map((panel) => (
        <div class="flex-1 flex flex-col items-center md:items-start md:border-r md:border-border last:border-r-0 px-4 md:px-8 md:first:pl-0 md:last:pr-0">
          <h4 class="!text-ink-tertiary mb-2">{panel.title}</h4>
          <Image
            src={panel.image}
            alt={panel.title}
            width={panel.imageWidth}
            draggable={false}
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section> 
---
import Buttons from "./Buttons.astro";
import FeedbackDialog from "./FeedbackDialog.astro";

export interface Props {
  endingText?: string;
}

const { endingText = "El fin." } = Astro.props;
---

<div class="work-footer w-full max-w-7xl mx-auto px-10 relative flex justify-between items-center pt-16 pb-4 pointer-events-none items-start">
  <div class="work-footer-text text-[--color-ink-tertiary] text-[clamp(1.25rem,4vw,1.75rem)] font-[--font-headings]">
    <span class="text-4xl caramel-text max-md:text-3xl">{endingText}</span>
  </div>
  <Buttons />
</div>

<FeedbackDialog />

<style>
  /* Keep this to ensure child elements can receive events */
  .work-footer > * {
    pointer-events: all;
  }
</style>

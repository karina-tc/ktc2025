---
import { Image } from "astro:assets";

interface Props {
  large?: boolean;
  interactive?: boolean;
  interactiveLabel?: string;
  image?: ImageMetadata;
  imageAlt?: string;
  title?: string;
  caption?: string;
  maxWidth?: number;
  imageStyles?: string;
}

const {
  large = false,
  interactive = false,
  interactiveLabel = "Play With It!",
  image,
  imageAlt = "",
  title,
  caption,
  maxWidth,
  imageStyles,
} = Astro.props;
---

<div class:list={["snippets-gallery-item", { large }]}>
  {interactive && <span class="interactive-label">{interactiveLabel}</span>}
  {title && <p class="plate-label">{title}</p>}
  <div class="gallery-inner" data-intersection-observer={true}>
    {
      image ? (
        <Image
          src={image}
          alt={imageAlt}
          draggable="false"
          width={440}
          loading="lazy"
          style={`max-width: ${maxWidth}px; ${imageStyles}`}
        />
      ) : (
        <slot />
      )
    }
    {caption && <span class="plate-caption">{caption}</span>}
  </div>
</div>

<style lang="scss">
  @import "../../../styles/base/_breakpoints.scss";

  .snippets-gallery-item {
    width: 100%;
    background-color: var(--color-surface);
    padding: var(--spacing-base);
    border: 4px solid var(--color-surface);
    border-radius: var(--border-radius-large);
    overflow: hidden;
    transition: all var(--transition-base);

    &:hover {
      border-color: var(--color-paper);
      box-shadow: 0px 10px 10px -5px rgba(108, 108, 108, 0.25);

      .interactive-label {
        opacity: 1;
      }
    }

    &.large {
      @include tablet-reverse {
        grid-column: span 2;
      }

      @include tablet {
        grid-column: span 1;
      }
    }

    .interactive-label {
      display: block;
      width: 100%;
      text-align: center;
      font-size: var(--font-size-xsmall);
      font-weight: 600;
      font-family: var(--font-mono);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: var(--color-chocolate);
      opacity: 0.7;
      transition: all var(--transition-base);
    }

    .gallery-inner {
      width: 100%;
      height: auto;
      min-height: 520px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;

      :global(img) {
        margin: auto;
        width: 100%;
        height: auto;
        object-fit: contain;

        @include tablet {
          width: 100%;
          height: auto;
          object-fit: contain;
        }

        @include mobile {
          width: 100%;
          height: auto;
          object-fit: contain;
        }
      }
    }
  }
</style> 
---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  title: string;
  description?: string;
}

const { image, title, description } = Astro.props;
---

<div class="post-image flex flex-col gap-2 my-10" data-intersection-observer={true}>
  <figure class="flex justify-center items-center border-4 border-lines rounded-xl overflow-hidden shadow-lg">
    <Image
      src={image}
      alt={title}
      width={800}
      height={400}
      loading="eager"
      class="w-full h-auto object-cover -mb-1"
    />
  </figure>
  <figcaption class="text-sm text-ink-tertiary dark:text-surface italic">
    {description && <p>{description}</p>}
  </figcaption>
</div>
<style lang="scss">
  .section-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    padding: var(--spacing-quad);

    h1 {
      margin: var(--spacing-double) 0 var(--spacing-base);

---
// Components
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";

// Assets
import download from "../assets/icons/download.svg";

// Data
import { workExperience, education, otherExperience } from "../data/resume";
---

<BaseLayout
  title="Karina Tovar | Resume"
  description="Karina Tovar's professional experience and background"
>
  <div class="grid-container" data-intersection-observer={true}>
    <div class="grid-content">
      <div class="text-content">
        <h2>Digital Resume</h2>
        <h1>Karina Tovar CV</h1>
      </div>
    </div>

    <div class="download-link">
      <span>
        <Image src={download} alt="Download" width={45} height={34} />
        <a href="/resume.pdf" class="download-link">Download PDF</a>
      </span>
    </div>
  </div>

  <div class="spacer-large"></div>

  <div class="resume-container">
    {
      workExperience.map((year) => (
        <div class="year-section">
          <h2 class="year-label">{year.year}</h2>
          <div class="companies">
            {year.companies.map((company, index) => {
              // Check if this company is the first occurrence within its year
              const isFirstOccurrence =
                index === 0 || year.companies[index - 1].name !== company.name;

              return (
                <div class="company-entry">
                  {isFirstOccurrence ? (
                    <div class="company-logo">
                      <Image
                        src={company.logo}
                        alt={company.name}
                        width={60}
                        height={60}
                        draggable={false}
                        loading="lazy"
                      />
                    </div>
                  ) : (
                    <div class="company-logo empty" />
                  )}
                  <div class="company-details">
                    <h4>
                      {isFirstOccurrence && company.companyUrl && company.companyUrl.length > 0 ? (
                        <a href={company.companyUrl} target="_blank" rel="noopener noreferrer">
                          <span class="company-url">{company.name}</span>
                        </a>
                      ) : (
                        <span>{company.name}</span>
                      )}
                    </h4>
                    <h2>{company.role}</h2>
                    <p class="period">{company.period}</p>
                    <p class="description">{company.description}</p>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      ))
    }

    <div class="section-group">
      <h2 class="section-title">Other</h2>
      <div class="other-entries">
        {
          otherExperience.map((entry) => (
            <div class="entry">
              <div class="logo-placeholder small">
                <Image
                  src={entry.logo}
                  alt={entry.company}
                  width={40}
                  height={40}
                  draggable={false}
                  loading="lazy"
                />
              </div>
              <div class="entry-details">
                <h4>{entry.company}</h4>
                <p>{entry.role}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="section-group">
      <h2 class="section-title">Education</h2>
      <div class="education-entries">
        {
          education.map((edu) => (
            <div class="entry">
              <div class="logo-placeholder small">
                <Image
                  src={edu.logo}
                  alt={edu.institution}
                  width={40}
                  height={40}
                  draggable={false}
                  loading="lazy"
                />
              </div>
              <div class="entry-details">
                <h4>{edu.institution}</h4>
                <p>{edu.degree}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div class="spacer-medium"></div>
</BaseLayout>

<style lang="scss">
  @import "../styles/base/_breakpoints.scss";

  .spacer-large {
    @include tablet {
      display: none;
    }
  }

  .download-link {
    display: inline-flex;
    align-items: flex-end;
    justify-content: flex-end;
    gap: var(--spacing-small);

    span {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-small);
    }

    a {
      color: var(--color-text-light);
      font-size: var(--font-size-giant);
      font-family: var(--font-headings);
      letter-spacing: -0.02em;
      text-decoration: underline;

      &:hover {
        text-decoration-color: var(--color-accent);
      }
    }

    @include tablet {
      align-items: flex-start;
      justify-content: flex-start;
    }
  }

  .resume-container {
    max-width: var(--content-narrow);
    margin: 0 auto;
    padding: var(--spacing-base);
  }

  .year-section {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--spacing-base);
    margin-bottom: var(--spacing-double);

    @include tablet {
      grid-template-columns: 1fr;
      gap: var(--spacing-small);

      .companies .company-entry:first-child:not(:only-child) {
        margin-bottom: -40px;
      }
    }
  }

  .year-label {
    font-family: var(--font-headings);
    text-align: left;
    position: relative;

    @include tablet {
      margin: 0 0 var(--spacing-base);
      padding-top: var(--spacing-double);
      &::before {
        content: "";
        position: absolute;
        top: 0px;
        left: 0;
        width: 100%;
        height: 2px;
        background: var(--color-surface);
      }
    }
  }

  .company-entry {
    display: flex;
    gap: var(--spacing-double);
    margin-bottom: var(--spacing-double);

    .company-logo {
      flex-shrink: 0;
      width: 60px;
      height: 60px;
      border-radius: 4px;
      overflow: hidden;
      filter: drop-shadow(0 2px 4px #b6aba3);

      &.empty {
        width: 60px;
        visibility: hidden;
      }
    }

    .company-details {
      h4 {
        margin-top: var(--spacing-small);

        .company-url {
          text-decoration: 1px underline;
          &:hover {
            text-decoration-color: var(--color-accent);
          }
        }
      }
      h2 {
        font-family: var(--font-headings);
        margin: var(--spacing-small) 0;
      }

      .period {
        font-family: var(--font-sans) !important;
        font-size: var(--font-size-small);
        margin-bottom: var(--spacing-base);
      }

      .description {
        color: var(--color-text-light);
      }
    }

    @include tablet {
      margin-bottom: 0;
      gap: var(--spacing-base);
      flex-direction: column;
    }
  }

  .section-group {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--spacing-base);
    margin-top: var(--spacing-double);

    @include tablet {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-family: var(--font-headings);
      letter-spacing: -0.02em;
      position: relative;
      @include tablet {
        margin: 0 0 var(--spacing-base);
        padding-top: var(--spacing-double);
        &::before {
          content: "";
          position: absolute;
          top: 0px;
          left: 0;
          width: 100%;
          height: 2px;
          background: var(--color-surface);
        }
      }
    }
  }

  .entry {
    display: flex;
    gap: var(--spacing-double);
    margin-bottom: var(--spacing-base);

    .entry-details {
      h4 {
        letter-spacing: -0.02em;
      }
      p {
        font-family: var(--font-headings);
      }
    }

    @include tablet {
      gap: var(--spacing-base);
    }
  }

  .logo-placeholder {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: var(--color-surface);
    border-radius: 4px;
    display: block;
    margin: auto;
    overflow: hidden;

    display: flex;
    align-items: center;
    justify-content: center;

    &.small {
      width: 40px;
      height: 40px;
      margin: 0 var(--spacing-small);
      filter: drop-shadow(0 2px 4px #b6aba3);

      @include tablet {
        margin: 0;
      }
    }
  }
</style>
